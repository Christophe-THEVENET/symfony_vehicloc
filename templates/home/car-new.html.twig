{% extends 'base.html.twig' %}

{% block body %}
    <section id="add">
        <a href="{{path('app_home')}}">‚Üê Retour</a>
        <h1>Ajouter une voiture</h1>
        {{ form_start(form, {attr: 
            stimulus_controller('notification', {url: path('app_car_new')}).toArray() | merge(
            stimulus_action('notification', 'trigger', 'submit').toArray())
        }) }}
            <div>
                {{ form_errors(form) }}
            </div>
            <div class="input">
                {{ form_label(form.name) }}
                {{ form_widget(form.name) }}
                {{ form_errors(form.name) }}
            </div>
            <div class="input">
                {{ form_label(form.description) }}
                {{ form_widget(form.description) }}
                {{ form_errors(form.description) }}
            </div>
            <div class="flex-input">
                <div class="input">
                    {{ form_label(form.monthly_price) }}
                    {{ form_widget(form.monthly_price) }}
                    {{ form_errors(form.monthly_price) }}
                </div>
                <div class="input">
                    {{ form_label(form.daily_price) }}
                    {{ form_widget(form.daily_price) }}
                    {{ form_errors(form.daily_price) }}
                </div>
            </div>
            <div class="flex-input">
                <div class="input">
                    {{ form_label(form.number_of_places) }}
                    {{ form_widget(form.number_of_places) }}
                    {{ form_errors(form.number_of_places) }}
                </div>
                <div class="input">
                    {{ form_label(form.manual_gearbox) }}
                    {{ form_widget(form.manual_gearbox) }}
                    {{ form_errors(form.manual_gearbox) }}
                </div>
            </div>
            <button type="submit" class="btn-add" style="cursor: pointer;">Ajouter</button>
        {{ form_end(form) }}
    </section>
{% endblock %}